{
  "manifest_version": 2,
  "name": "Site Status Checker",
  "version": "1.0",
  "description": "Checks if websites are down globally or just for you",
  "icons": {
    "1920": "icon.jpg"
  },
  "permissions": [
    "webRequest",
    "notifications",
    "downloads",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "site-status-checker@example.com",
      "strict_min_version": "57.0"
    }
  }
}
